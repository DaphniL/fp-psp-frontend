<div class="list-common-content">
  <div id="top" class="search-container">
    <div class="row">
      <div class="col-md-12">
        <form class="form-inline">
          <div class="form-group">
            <label>{{$t 'report.snapshot.search.date-from'}} * :</label>
            <div class='input-group date' id='dateFrom'>
                <input id="date1" value={{filters.dateFrom}} type='text' class="form-control" placeholder="DD/MM/YYYY" />
                <span class="input-group-addon">
                    <span class="glyphicon glyphicon-calendar"></span>
                </span>
            </div>            
          </div>
          <div class="form-group">
            <label>{{$t 'report.snapshot.search.date-to'}} * :</label>
            <div class='input-group date' id='dateTo'>
                <input id="date2" value={{filters.dateTo}} type='text' class="form-control" placeholder="DD/MM/YYYY" />
                <span class="input-group-addon">
                    <span class="glyphicon glyphicon-calendar"></span>
                </span>
            </div>            
          </div>
          <div class="form-group" id="organizationForm">
              <label is="organizationLabel">{{$t 'report.snapshot.search.organization'}} * : </label>
              <select class="form-control" id="organization">
                  <option selected disabled value="choose">{{$t 'report.snapshot.search.choose'}}</option>
                  <option value="all">{{$t 'report.snapshot.search.all'}}</option>
              </select>
          </div>
          <div class="form-group">
            <button type="button" id="submit" class="btn btn"><i class="fa fa-search"></i> {{$t 'report.snapshot.search.search'}}</button>
          </div>
        </form>
      </div>
    </div>
  </div>
  <div id="family-organization-list" class="has-spinner">
      
  </div>
</div>
