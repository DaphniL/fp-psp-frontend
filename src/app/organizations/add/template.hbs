<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <article class="card animated fadeInLeft">

      <div class="card-block">
        <div class="card-title">
          <h4> Add an Organization
            <img class="pull-right" src="/static/images/icon_more.png">
          </h4>
        </div>
        <br>
        <div class="" id="img-cam">
          <img id="image-logo" class="card-img-top img-responsive center-block" src="/static/images/icon_camara.png" alt="" />
          <p id="image-logo-text" class="text-center">Click to upload a logo</p>

          <div class="form-group">
            <input value="{{organization.image}}" id="input-image-file" type="file" class="form-control" name="image" style="display: none;" >
          </div>

        </div>


        <br>
        <br>
        <div class="fp-form-container" id="add-organization">
          <form data-toggle="validator" role="form" class="form-vertical" id="form">
            <div class="alert alert-warning" style="display:none">
              <strong>Attention! All the fields with * are mandatory</strong>
            </div>

            <div class="form-group">
              <input value="{{organization.name}}" type="text" class="form-control" name="name" value="" placeholder="Organization name"
                     required>
            </div>
            <div class="form-group">
              <input value="{{organization.code}}" type="text" class="form-control" name="code" placeholder="Code" required>
            </div>
            <div class="form-group">
              <input value="{{organization.description}}" type="text" class="form-control" name="description" placeholder="Description" required>
            </div>
            <div class="form-group">
              <input value="{{organization.information}}" type="text" class="form-control" name="information" placeholder="Information" required>
            </div>
            <div class="form-group">
              <div class="row">
                <div class="col-sm-12">
                  <button type="submit" name="register-submit" id="submit" class="btn" value="Save">ADD ORGANIZATION</button>
                </div>
              </div>
            </div>
            <div class="form-group">
              <div class="text-center">
                <a href="#organizations" id="cancel" tabindex="5" class="">Cancel</a>
              </div>

            </div>
          </form>

        </div>
      </div>
    </article>
  </div>
</div>
