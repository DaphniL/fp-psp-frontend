<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <article class="card">

      <div class="card-block">
        <div class="row">
          <div class="col-md-12">
            <div class="card-title">
              <h4> Add an Organisation
                <img class="pull-right" src="/static/images/icon_more.png">
              </h4>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <div class="margin-tb-35px" id="img-cam">
              <img id="image-logo" src="{{logoImage}}"
                   class="card-img-top img-responsive center-block select-file" alt="" />
              <p id="image-logo-text" class="text-center select-file">Click to upload a logo</p>
              <div class="form-group">
                <input type="file" name="image" id="input-image-file" value="{{organization.image}}"
                       class="form-control" style="display: none;">
              </div>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-8 col-md-offset-2">
            <div class="fp-form-container padding-b-30px" id="add-organization">
              <form data-toggle="validator" role="form" class="form-vertical" id="form">
                <div class="alert alert-warning" style="display:none">
                  <strong>Attention! All the fields with * are mandatory</strong>
                </div>
                <div class="form-group">
                  <input name="name" type="text" value="{{organization.name}}" placeholder="Organisation name"
                         class="input-bg-gray form-control" required>
                </div>
                <div class="form-group">
                  <input name="code" type="text" value="{{organization.code}}" placeholder="Code"
                         class="input-bg-gray form-control" required
                         {{#if editing}} readonly {{/if}}if}}>
                </div>
                <div class="form-group">
                  <input name="description" type="text" value="{{organization.description}}" placeholder="Description"
                         class="input-bg-gray form-control" required>
                </div>
                <div class="form-group">
                  <input name="information" type="text" value="{{organization.information}}" placeholder="information"
                         class="input-bg-gray form-control" required>
                </div>

                <div class="form-group">
                  <div class="row">
                    <div class="col-sm-12">
                      <button type="submit" name="register-submit" id="submit" class="btn" value="Save">
                        SAVE ORGANISATION
                      </button>
                    </div>
                  </div>
                </div>
                <div class="form-group">
                  <div class="text-center">
                    <a href="#organizations" id="cancel" tabindex="5" class="">Cancel</a>
                  </div>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </article>
  </div>
</div>
